{
  "name": "markdown-mermaid-renderer",
  "version": "1.0.0",
  "description": "Local Markdown and Mermaid diagram renderer with PDF export",
  "main": "index.html",
  "scripts": {
    "start": "npx http-server -p 8080 -o",
    "docker:build": "docker build -t markdown-mermaid-renderer:latest .",
    "docker:run": "docker run -d -p 8080:80 --name markdown-renderer markdown-mermaid-renderer:latest",
    "docker:stop": "docker stop markdown-renderer && docker rm markdown-renderer",
    "docker:logs": "docker logs -f markdown-renderer",
    "docker:compose:up": "docker-compose up -d",
    "docker:compose:down": "docker-compose down",
    "docker:compose:logs": "docker-compose logs -f"
  },
  "keywords": ["markdown", "mermaid", "renderer", "pdf"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "http-server": "^14.1.1"
  }
}
